@keyframes scrollIn{
  from {
  transform: translateY(50px);
  opacity: 0;
  }
  to {
  transform: translateY(0px);
  opacity: 1;
  }
}

.scrollIn
  animation-fill-mode forwards
  animation-name scrollIn
  animation-duration .6s  
  animation-iteration-count 1 
  animation-delay 0s
  

