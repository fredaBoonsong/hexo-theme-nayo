

.article 
  margin-bottom 80px
  padding 18px 0 
  border-bottom 1px solid $line-clr
  opacity 0 

.article-header   
   margin-bottom 1.2rem
   text-align center
   & time
     color rgba(0,0,0,.45)   
      
.article-title     
    display block      
    font-size 1.9rem
    padding 0 6px
    margin-bottom .90rem   
 
.article-excerpt
    margin 0
    padding 1rem .8rem   
    font-size 1rem   
    & a
      color $thr-clr !important  
      &:hover    
        color $main-clr !important  
    
.article-readmore 
    display block
    width 66px
    margin 1.8rem auto 0 auto
    font-size .85rem 
    letter-spacing .8px
    padding 8px 10px
    text-align center
    border-radius 444rem
    border 1px solid $line-clr
    background rgba(255,255,255,.1)
    &:link,&:visited,&:active 
      color $light-gray 
    &:hover
      color $bgr 
      background-color $shallow 

    

 
.banner    
    position relative
    left -1%   
    width 102%
    height 22.5rem  
    background-size cover
    background-position center
    background-repeat no-repeat
    border-radius 2px
    @media mq-mobile 
      width 100%
      max-height 12rem

.gallery  
    border-radius 2px
    display inline-block
    width 11.24rem
    height 11.24rem   
    background-size cover
    background-position center
    background-repeat no-repeat
    @media mq-mobile
      margin-bottom .5rem
      width 48%
      height 10rem 