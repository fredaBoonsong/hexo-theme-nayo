
//
// tag 
//

	
.meta-name	
	margin 1em 	
	letter-spacing 1px
	font-size 1rem 
	
.tag-wrap	
	@extend $tags  
	display inline-block		
	margin .4rem .3rem 	
	padding  2px 12px	
.tag-name
	font-size 0.9rem

.tag-count
	font-size 0.825rem
	


.cate-inner
	padding .8rem .6rem
	margin .5rem 1rem 2rem 1rem
	border-top 1px solid $line-clr
	border-bottom 1px solid $line-clr
	border-radius 2px
	display flex
	justify-content space-between
	cursor pointer
	&:hover		
		box-shadow 0 4px 2px 3px rgba(0,0,0,.05)
	
		
.cate-info	
	display inline-block 
	@extend $oneline
	margin .5rem 0  .3rem 4rem 	
	font-size 1.03rem
	& .cate-name
		padding-left 16px
	
.cate-count
	display inline-block
	text-align right
	font-size 0.825rem	




.archive-year
	@extend $tips-min	
	font-size 1.3rem
	margin 2rem 3rem
	padding 12px 0
	cursor pointer
	color rgba(0,0,0,0.7)
	text-align center	
	border-bottom .5px solid $line-clr
	
.archive-item			
	position relative		
	padding 1rem 0 1rem 3rem


.archive-time		
	position  absolute
	left 7.5rem
	top 24px
	font-size .98rem
	line-height 1
	color rgba(0,0,0,.5)
	font-family $time-font  
	
		    
.archive-title
	display inline-block
	margin-left 12.5rem	
	& a
		font-size 1.25rem
		letter-spacing 1px
