
// from hexo-theme-next

$highlight_theme = hexo-config("highlight_theme")


  $code-font-size         = .9rem
  $code-font-family       = 'Helvetica','consolas'

  
  $highlight-foreground   = rgba(0,0,0,.7)
  $highlight-marked       = $sub-clr 


if $highlight_theme == "normal"
 
  $highlight-deletion     = #fdd
  $highlight-addition     = #dfd
  $highlight-background   = #eee
  $highlight-current-line = #ebebeb
  $highlight-selection    = #d6d6d6
  $highlight-foreground   = #4d4d4c
  $highlight-comment      = #8e908c

  $highlight-red          = #E24C38
  $highlight-orange       = #e78c45
  $highlight-yellow       = #e7c547
  $highlight-green        = #336600
  $highlight-aqua         = #70c0b1
  $highlight-blue         = #7aa6da
  $highlight-purple       = #c397d8
  $highlight-gray         = #a6a6a6 
  $highlight-gutter       = {
    color: #869194,
    bg-color: #e0e0e0
  }

if $highlight_theme == "night"
  $highlight-background   = #3a3a3a
  $highlight-current-line = #393939
  $highlight-selection    = #515151
  $highlight-foreground   = #cccccc
  $highlight-comment      = #999999
  $highlight-red          = #f2777a
  $highlight-orange       = #f99157
  $highlight-yellow       = #ffcc66
  $highlight-green        = #99cc99
  $highlight-aqua         = #66cccc
  $highlight-blue         = #6699cc
  $highlight-purple       = #cc99cc
  $highlight-gutter       = {
    color: $highlight-comment,
    bg-color: darken($highlight-background, 90%)
  }
  

if $highlight_theme == "white"
  $highlight-background   = #F5F6FA
  $highlight-current-line = #efefef
  $highlight-selection    = #d6d6d6
  $highlight-foreground   = #4d4d4c
  $highlight-comment      = #8e908c
  $highlight-red          = #c82829
  $highlight-orange       = #c82829
  $highlight-yellow       = #eab700
  $highlight-green        = #718c00
  $highlight-aqua         = #3e999f
  $highlight-blue         = #4271ae
  $highlight-purple       = #8959a8
  $highlight-gutter       = {
    color: $highlight-comment,
    bg-color: darken($highlight-background, 90%)
  }
