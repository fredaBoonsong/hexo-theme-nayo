//
.item	
	font-size 1rem
	overflow hidden
	margin 1.6rem 0
	padding 0 2rem
	&:hover
		color $thr-clr
		
.item-date		
	float left
	width 25%
	text-align right
	&:hover		
		color $thr-clr

.item-title
	float left
	margin-left 5%		
	width 70%		
	&:hover		
		color $thr-clr
